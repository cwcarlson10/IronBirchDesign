<h1>Products</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th colspan="8"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.image_url %></td>
      <td class="item_price"><%= number_to_currency(product.price) %></td>
      <td><%= link_to 'Product', product_path(product.id) %></td>
      <td><%= link_to 'Delete', product_path(product.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>


